{
	"app": {
		"name": "Smoking Tracker",
		"slug": "smoking-tracker",
		"entry_name": "cigarette",
		"description": "Number of cigarettes smoked.",
		"private": false,
		"icon": "ðŸš¬ðŸ˜€",
		"color": "#b39ec7",
		"storageType": "",
		"storage": "",
