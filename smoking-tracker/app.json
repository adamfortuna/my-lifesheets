				"icon": "ðŸš¬"
			},
			"name": "cigarettes"
		},
		{
			"type": "action",
			"scope": "entry",
			"settings": {
				"target_preset": "custom",
				"target": "entry",
				"set_pairs": [
					{
						"name": "cigarettes",
						"value": "cigarettes+1"
					},
					{
						"name": "time",
						"value": "time($now)"
					}
				],
				"filter_pairs": [],
				"label": "Add cigarette",
				"visible": "true"
			}
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "cigarettes"
			}
		}
	],
	"root": [
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"visible": "edit",
				"target": "add(entry)",
				"target_preset": "new",
				"appearance": "",
				"set_pairs": [],
				"filter_pairs": [],
				"label": "âž• Add day"
			}
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"prefix": "Time since last cigarette ",
				"expression": "duration($now - last(date_time))"
			}
		}
	],
	"charts": [
		{
			"type": "chart",
			"scope": "charts",
			"settings": {
				"type": "bar",
				"group_by": "day",
				"orientation": "horizontal"
			}
		}
	]
